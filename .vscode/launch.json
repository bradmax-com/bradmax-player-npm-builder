	"version": "0.2.0",
	"configurations": [
		/* ======================================================= */
		/* HELP */
		{
			"type": "node",
			"request": "launch",
			"name": "HELP",
			"program": "${workspaceFolder}/src/bradmax.js",
			"args": [
				"--help"
			],
			"console": "integratedTerminal"
		},
		/* ======================================================= */
		/* DISTRIBUTION SERVER */
		{
			"type": "node",
			"request": "launch",
			"name": "DISTRIBUTION SERVER",
			"program": "${workspaceFolder}/src/bradmax.js",
			"args": [
				"player:server"
			],
			"console": "integratedTerminal"
		},
		/* BUMP */
		{
			"type": "node",
			"request": "launch",
			"name": "BUMP:major",
			"program": "${workspaceFolder}/src/bradmax.js",
			"args": [
				"bump:major"
			],
			"console": "integratedTerminal"
		},
		{
			"type": "node",
			"request": "launch",
			"name": "BUMP:minor",
			"program": "${workspaceFolder}/src/bradmax.js",
			"args": [
				"bump:minor"
			],
			"console": "integratedTerminal"
		},
		{
			"type": "node",
			"request": "launch",
			"name": "BUMP:patch",
			"program": "${workspaceFolder}/src/bradmax.js",
			"args": [
				"bump:patch"
			],
			"console": "integratedTerminal"
		},
		/* ======================================================= */
		/* BUILD */
		{
			"type": "node",
			"request": "launch",
			"name": "BUILD",
			"program": "${workspaceFolder}/src/bradmax.js",
			"args": [
				"build"
			],
			"console": "integratedTerminal"
		},
		/* ======================================================= */
		/* JS player */
		{
			"type": "node",
			"request": "launch",
			"name": "BUILD:JS player / debug",
			"program": "${workspaceFolder}/src/bradmax.js",
			"args": [
				"player:js",
				"--debug"
			],
			"console": "integratedTerminal"
		},
		{
			"type": "node",
			"request": "launch",
			"name": "BUILD:JS player / compile players / debug",
			"program": "${workspaceFolder}/src/bradmax.js",
			"args": [
				"player:js",
				"--debug",
				"--compilePlayer"
			],
			"console": "integratedTerminal"
		},
		/* ======================================================= */
		/* AG player */
		{
			"type": "node",
			"request": "launch",
			"name": "BUILD:AG player / debug",
			"program": "${workspaceFolder}/src/bradmax.js",
			"args": [
				"player:ag",
				"--debug"
			],
			"console": "integratedTerminal"
		},
		{
			"type": "node",
			"request": "launch",
			"name": "BUILD:AG player / localServer / debug",
			"program": "${workspaceFolder}/src/bradmax.js",
			"args": [
				"player:ag",
				"--debug",
				"--localServer"
			],
			"console": "integratedTerminal"
		},
		/* ======================================================= */
		/* NG player */
		{
			"type": "node",
			"request": "launch",
			"name": "BUILD:NG player / debug",
			"program": "${workspaceFolder}/src/bradmax.js",
			"args": [
				"player:ng",
				"--debug"
			],
			"console": "integratedTerminal"
		},
		{
			"type": "node",
			"request": "launch",
			"name": "BUILD:NG player / localServer / debug",
			"program": "${workspaceFolder}/src/bradmax.js",
			"args": [
				"player:ng",
				"--debug",
				"--localServer"
			],
			"console": "integratedTerminal"
		},
		/* ======================================================= */
		/* RX player */
		{
			"type": "node",
			"request": "launch",
			"name": "BUILD:RX player / debug",
			"program": "${workspaceFolder}/src/bradmax.js",
			"args": [
				"player:rx",
				"--debug"
			],
			"console": "integratedTerminal"
		},
		{
			"type": "node",
			"request": "launch",
			"name": "BUILD:RX player / localServer / debug",
			"program": "${workspaceFolder}/src/bradmax.js",
			"args": [
				"player:rx",
				"--debug",
				"--localServer"
			],
			"console": "integratedTerminal"
		},
		/* ======================================================= */
		/* CLEAR */
		{
			"type": "node",
			"request": "launch",
			"name": "CLEAR",
			"program": "${workspaceFolder}/src/bradmax.js",
			"args": [
				"clear"
			],
			"console": "integratedTerminal"
		}
	]
}
